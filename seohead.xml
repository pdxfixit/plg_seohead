<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>System - SEO Head</name>
    <author>PDXfixIT and Marketing Portland</author>
    <creationDate>October 17, 2012</creationDate>
    <copyright>Copyleft (c) 2012 PDXfixIT and Marketing Portland</copyright>
    <authorEmail>info@pdxfixit.com</authorEmail>
    <authorUrl>http://www.pdxfixit.com</authorUrl>
    <version>1.0.2</version>
    <description><![CDATA[<div style="font-family: tahoma, sans-serif; text-align: center; width: 422px;"><a href="http://www.pdxfixit.com/" target="_blank"><img src="http://updates.pdxfixit.com/plg_seohead-logo.jpg" alt="SEO Head" border="0"/></a><br /><br />October 17, 2012<br />Version: 1.0.2</div>]]></description>
    <files>
        <file plugin="seohead">seohead.php</file>
        <filename>seohead.xml</filename>
        <filename>index.html</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_seohead.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_seohead.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" label="PLG_SYSTEM_SEOHEAD_ESSENTIALS">
                <field name="business" type="text" default="" label="PLG_SYSTEM_SEOHEAD_BUSINESS" description="PLG_SYSTEM_SEOHEAD_BUSINESS_DESC" />
                <field name="address" type="text" default="" label="PLG_SYSTEM_SEOHEAD_ADDRESS" description="PLG_SYSTEM_SEOHEAD_ADDRESS_DESC" />
                <field name="city" type="text" default="" label="PLG_SYSTEM_SEOHEAD_CITY" description="PLG_SYSTEM_SEOHEAD_CITY_DESC" />
                <field name="state" type="text" default="" label="PLG_SYSTEM_SEOHEAD_STATE" description="PLG_SYSTEM_SEOHEAD_STATE_DESC" />
                <field name="zip" type="text" default="" label="PLG_SYSTEM_SEOHEAD_ZIP" description="PLG_SYSTEM_SEOHEAD_ZIP_DESC" />
                <field name="country" type="text" default="US" label="PLG_SYSTEM_SEOHEAD_COUNTRY" description="PLG_SYSTEM_SEOHEAD_COUNTRY_DESC" />
                <field name="phone" type="text" default="" label="PLG_SYSTEM_SEOHEAD_PHONE" description="PLG_SYSTEM_SEOHEAD_PHONE_DESC" />
                <field name="fax" type="text" default="" label="PLG_SYSTEM_SEOHEAD_FAX" description="PLG_SYSTEM_SEOHEAD_FAX_DESC" />
                <field name="email" type="text" default="" label="PLG_SYSTEM_SEOHEAD_EMAIL" description="PLG_SYSTEM_SEOHEAD_EMAIL_DESC" />
                <field name="established" type="text" default="" label="PLG_SYSTEM_SEOHEAD_EST" description="PLG_SYSTEM_SEOHEAD_EST_DESC" />
                <field name="contact" type="text" default="" label="PLG_SYSTEM_SEOHEAD_CONTACT" description="PLG_SYSTEM_SEOHEAD_CONTACT_DESC" />
                <field name="latitude" type="text" default="" label="PLG_SYSTEM_SEOHEAD_LAT" description="PLG_SYSTEM_SEOHEAD_LAT_DESC" />
                <field name="longitude" type="text" default="" label="PLG_SYSTEM_SEOHEAD_LONG" description="PLG_SYSTEM_SEOHEAD_LONG_DESC" />
                <field name="googleverify" type="text" default="" label="PLG_SYSTEM_SEOHEAD_GVERIFY" description="PLG_SYSTEM_SEOHEAD_GVERIFY_DESC" />
                <field name="alexaverify" type="text" default="" label="PLG_SYSTEM_SEOHEAD_ALEXAVERIFY" description="PLG_SYSTEM_SEOHEAD_ALEXAVERIFY_DESC" />
            </fieldset>
            <fieldset name="opengraph" label="PLG_SYSTEM_SEOHEAD_OG_SETTINGS">
                <field name="opengraph_flag" type="radio" default="1" label="PLG_SYSTEM_SEOHEAD_OG_FLAG" description="PLG_SYSTEM_SEOHEAD_OG_FLAG_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="opengraph_type" type="list" default="article" label="PLG_SYSTEM_SEOHEAD_OG_TYPE" description="PLG_SYSTEM_SEOHEAD_OG_FLAG_DESC">
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_ACTIVITIES</option>
                    <option value="activity">PLG_SYSTEM_SEOHEAD_OG_TYPE_ACTIVITY</option>
                    <option value="sport">PLG_SYSTEM_SEOHEAD_OG_TYPE_SPORT</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_BUSINESSES</option>
                    <option value="bar">PLG_SYSTEM_SEOHEAD_OG_TYPE_BAR</option>
                    <option value="company">PLG_SYSTEM_SEOHEAD_OG_TYPE_COMPANY</option>
                    <option value="cafe">PLG_SYSTEM_SEOHEAD_OG_TYPE_CAFE</option>
                    <option value="hotel">PLG_SYSTEM_SEOHEAD_OG_TYPE_HOTEL</option>
                    <option value="restaurant">PLG_SYSTEM_SEOHEAD_OG_TYPE_RESTAURANT</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_GROUPS</option>
                    <option value="cause">PLG_SYSTEM_SEOHEAD_OG_TYPE_CAUSE</option>
                    <option value="sports_league">PLG_SYSTEM_SEOHEAD_OG_TYPE_SPORTS_LEAGUE</option>
                    <option value="sports_team">PLG_SYSTEM_SEOHEAD_OG_TYPE_SPORTS_TEAM</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_ORGANIZATIONS</option>
                    <option value="band">PLG_SYSTEM_SEOHEAD_OG_TYPE_BAND</option>
                    <option value="government">PLG_SYSTEM_SEOHEAD_OG_TYPE_GOVERNMENT</option>
                    <option value="non_profit">PLG_SYSTEM_SEOHEAD_OG_TYPE_NON_PROFIT</option>
                    <option value="school">PLG_SYSTEM_SEOHEAD_OG_TYPE_SCHOOL</option>
                    <option value="university">PLG_SYSTEM_SEOHEAD_OG_TYPE_UNIVERSITY</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_PEOPLE</option>
                    <option value="actor">PLG_SYSTEM_SEOHEAD_OG_TYPE_ACTOR</option>
                    <option value="athlete">PLG_SYSTEM_SEOHEAD_OG_TYPE_ATHLETE</option>
                    <option value="author">PLG_SYSTEM_SEOHEAD_OG_TYPE_AUTHOR</option>
                    <option value="director">PLG_SYSTEM_SEOHEAD_OG_TYPE_DIRECTOR</option>
                    <option value="musician">PLG_SYSTEM_SEOHEAD_OG_TYPE_MUSICIAN</option>
                    <option value="politician">PLG_SYSTEM_SEOHEAD_OG_TYPE_POLITICIAN</option>
                    <option value="public_figure">PLG_SYSTEM_SEOHEAD_OG_TYPE_PUBLIC_FIGURE</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_PLACES</option>
                    <option value="city">PLG_SYSTEM_SEOHEAD_OG_TYPE_CITY</option>
                    <option value="country">PLG_SYSTEM_SEOHEAD_OG_TYPE_COUNTRY</option>
                    <option value="landmark">PLG_SYSTEM_SEOHEAD_OG_TYPE_LANDMARK</option>
                    <option value="state_province">PLG_SYSTEM_SEOHEAD_OG_TYPE_STATE_PROVINCE</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_PRODUCTS_AND_ENTERTAINMENT</option>
                    <option value="album">PLG_SYSTEM_SEOHEAD_OG_TYPE_ALBUM</option>
                    <option value="book">PLG_SYSTEM_SEOHEAD_OG_TYPE_BOOK</option>
                    <option value="drink">PLG_SYSTEM_SEOHEAD_OG_TYPE_DRINK</option>
                    <option value="food">PLG_SYSTEM_SEOHEAD_OG_TYPE_FOOD</option>
                    <option value="game">PLG_SYSTEM_SEOHEAD_OG_TYPE_GAME</option>
                    <option value="product">PLG_SYSTEM_SEOHEAD_OG_TYPE_PRODUCT</option>
                    <option value="song">PLG_SYSTEM_SEOHEAD_OG_TYPE_SONG</option>
                    <option value="movie">PLG_SYSTEM_SEOHEAD_OG_TYPE_MOVIE</option>
                    <option value="tv_show">PLG_SYSTEM_SEOHEAD_OG_TYPE_TV_SHOW</option>
                    <option value="">PLG_SYSTEM_SEOHEAD_OG_TYPE_WEBSITES</option>
                    <option value="article">PLG_SYSTEM_SEOHEAD_OG_TYPE_ARTICLE</option>
                </field>
                <field name="fbadmin" type="text" default="" label="PLG_SYSTEM_SEOHEAD_OG_FBADMIN" description="PLG_SYSTEM_SEOHEAD_OG_FBADMIN_DESC" />
                <field name="image" type="imagelist" hide_default="true" directory="images" default="" label="PLG_SYSTEM_SEOHEAD_OG_IMAGE" description="PLG_SYSTEM_SEOHEAD_OG_IMAGE_DESC" />
                <field name="audio" type="text" default="" label="PLG_SYSTEM_SEOHEAD_OG_AUDIO" description="PLG_SYSTEM_SEOHEAD_OG_AUDIO_DESC" />
                <field name="video" type="text" default="" label="PLG_SYSTEM_SEOHEAD_OG_VIDEO" description="PLG_SYSTEM_SEOHEAD_OG_VIDEO_DESC" />
            </fieldset>
            <fieldset name="dublincore" label="PLG_SYSTEM_SEOHEAD_DUBLINCORE_SETTINGS">
                <field name="dublincore_flag" type="radio" default="0" label="PLG_SYSTEM_SEOHEAD_DUBLINCORE_FLAG" description="PLG_SYSTEM_SEOHEAD_DUBLINCORE_FLAG_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <!--
            <fieldset name="other" label="PLG_SYSTEM_SEOHEAD_OTHER">
                <field name="other" type="textarea" default="" label="PLG_SYSTEM_SEOHEAD_OTHER_META_DATA" description="PLG_SYSTEM_SEOHEAD_OTHER_META_DATA_DESC" />
            </fieldset>
            -->
        </fields>
    </config>
    <updateservers>
        <server type="collection" priority="1" name="PDXfixIT">http://updates.pdxfixit.com/plg_seohead.xml</server>
    </updateservers>
</extension>
